<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment names="Development">
        <link href="~/css/reset.css" rel="stylesheet" />
        <link href="~/css/style.css" rel="stylesheet" />
        <link href="~/css/semantic.css" rel="stylesheet" />
    </environment>

    <environment names="Staging,Production"></environment>

    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div class="ui inverted segment">
        <div class="ui inverted secondary menu">
            <a asp-controller="Home" asp-action="Index" class="active item">Timeline</a>
            <a asp-controller="Home" asp-action="Index" class="item">Como funciona?</a>
            <a asp-controller="Home" asp-action="Index" class="item">Faqs</a>
            <a asp-controller="Home" asp-action="Index" class="item">Informações</a>
        </div>
    </div>
    <div>
        @RenderBody()
        <div class="ui black inverted vertical footer segment">
            
        </div>
        <environment names="Development">
            <script src="~/js/modernizr.js"></script>
            <script src="~/js/main.js" asp-append-version="true"></script>
            <script src="~/js/semantic.js" asp-append-version="true"></script>
        </environment>

        <environment names="Staging,Production"></environment>

        @RenderSection("scripts", required: false)
</body>
</html>
